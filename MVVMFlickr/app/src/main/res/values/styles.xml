<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="item_card_style" >
        <item name="android:paddingLeft">@dimen/item_padding</item>
        <item name="android:paddingRight">@dimen/item_padding</item>
    </style>

    <style name="item_text_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/item_text_background_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/item_padding</item>
        <item name="android:paddingRight">@dimen/item_padding</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <style name="Widget.BottomNavigationView" parent = "Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/concert_one</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget_Toolbar_Text">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">@string/app_name</item>
    </style>
</resources>
